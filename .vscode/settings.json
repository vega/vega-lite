// Place your settings in this file to overwrite default and user settings.
{
  "editor.tabSize": 2,
  "files.exclude": {
    "**/*.js": {"when": "$(basename).ts"},
    "**/*.js.map": {"when": "$(basename)"},
    "src/**/*.d.ts": {"when": "$(basename).ts"},
    "test/**/*.test.d.ts": {"when": "$(basename).ts"},
    "coverage/**/*": true,
    "_site/**/*": true
  }
}
