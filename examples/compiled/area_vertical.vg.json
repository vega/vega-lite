{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Area chart showing weight of cars over time (vertical).",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/cars.json",
      "format": {"type": "json", "parse": {"Year": "date"}},
      "transform": [
        {
          "type": "formula",
          "as": "year_Year",
          "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year"],
          "ops": ["sum"],
          "fields": ["Weight_in_lbs"],
          "as": ["sum_Weight_in_lbs"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "area",
      "style": ["area"],
      "sort": {"field": "datum[\"year_Year\"]", "order": "descending"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "interpolate": {"value": "monotone"},
          "orient": {"value": "horizontal"},
          "fill": {"value": "#4c78a8"},
          "x": {"scale": "x", "field": "sum_Weight_in_lbs"},
          "y": {"scale": "y", "field": "year_Year"},
          "x2": {"scale": "x", "value": 0},
          "defined": {
            "signal": "datum[\"sum_Weight_in_lbs\"] !== null && !isNaN(datum[\"sum_Weight_in_lbs\"]) && datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "source_0", "field": "sum_Weight_in_lbs"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "time",
      "domain": {"data": "source_0", "field": "year_Year"},
      "range": [{"signal": "height"}, 0]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Sum of Weight_in_lbs",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Year (year)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "encode": {
        "labels": {
          "update": {"text": {"signal": "timeFormat(datum.value, '%Y')"}}
        }
      },
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ]
}
