{
    "$schema": "https://vega.github.io/schema/vega/v3.json",
    "description": "A 1D horizontal box plot showing median, min, and max in the US population distribution of age groups in 2000.",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 21,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/population.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [],
                    "ops": [
                        "q1",
                        "q3",
                        "median",
                        "min",
                        "max"
                    ],
                    "fields": [
                        "people",
                        "people",
                        "people",
                        "people",
                        "people"
                    ],
                    "as": [
                        "lower_box_people",
                        "upper_box_people",
                        "mid_box_people",
                        "min_people",
                        "max_people"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "datum.upper_box_people - datum.lower_box_people",
                    "as": "iqr_people"
                },
                {
                    "type": "formula",
                    "expr": "min(datum.upper_box_people + datum.iqr_people * 1.5, datum.max_people)",
                    "as": "upper_whisker_people"
                },
                {
                    "type": "formula",
                    "expr": "max(datum.lower_box_people - datum.iqr_people * 1.5, datum.min_people)",
                    "as": "lower_whisker_people"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"lower_box_people\"])",
                    "as": "lower_box_people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"lower_whisker_people\"] !== null && !isNaN(datum[\"lower_whisker_people\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"upper_box_people\"])",
                    "as": "upper_box_people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"upper_box_people\"] !== null && !isNaN(datum[\"upper_box_people\"])"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"lower_box_people\"])",
                    "as": "lower_box_people"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"upper_box_people\"])",
                    "as": "upper_box_people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"lower_box_people\"] !== null && !isNaN(datum[\"lower_box_people\"])"
                }
            ]
        },
        {
            "name": "data_3",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"mid_box_people\"])",
                    "as": "mid_box_people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"mid_box_people\"] !== null && !isNaN(datum[\"mid_box_people\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rule",
            "style": [
                "rule",
                "boxWhisker"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "lower_whisker_people"
                    },
                    "y": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "x2": {
                        "scale": "x",
                        "field": "lower_box_people"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rule",
            "style": [
                "rule",
                "boxWhisker"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "upper_box_people"
                    },
                    "y": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "x2": {
                        "scale": "x",
                        "field": "upper_whisker_people"
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "lower_box_people"
                    },
                    "x2": {
                        "scale": "x",
                        "field": "upper_box_people"
                    },
                    "yc": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "height": {
                        "value": 14
                    }
                }
            }
        },
        {
            "name": "layer_3_marks",
            "type": "rect",
            "style": [
                "tick",
                "boxMid"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "white"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "mid_box_people"
                    },
                    "yc": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "height": {
                        "value": 14
                    },
                    "width": {
                        "value": 1
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "lower_whisker_people"
                    },
                    {
                        "data": "data_0",
                        "field": "lower_box_people"
                    },
                    {
                        "data": "data_1",
                        "field": "upper_box_people"
                    },
                    {
                        "data": "data_1",
                        "field": "upper_whisker_people"
                    },
                    {
                        "data": "data_2",
                        "field": "lower_box_people"
                    },
                    {
                        "data": "data_2",
                        "field": "upper_box_people"
                    },
                    {
                        "data": "data_3",
                        "field": "mid_box_people"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "population",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
