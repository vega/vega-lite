{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A vertical 2D box plot showing median, min, and max in the US population distribution of age groups in 2000.",
    "autosize": "pad",
    "padding": 5,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/population.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "age"
                    ],
                    "ops": [
                        "q1",
                        "q3",
                        "median"
                    ],
                    "fields": [
                        "people",
                        "people",
                        "people"
                    ],
                    "as": [
                        "lowerBox",
                        "upperBox",
                        "midBox"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "datum.upperBox - datum.lowerBox",
                    "as": "IQR"
                },
                {
                    "type": "formula",
                    "expr": "datum.lowerBox - datum.IQR * 1.5",
                    "as": "lowerWhisker"
                },
                {
                    "type": "formula",
                    "expr": "datum.upperBox + datum.IQR * 1.5",
                    "as": "upperWhisker"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"lowerWhisker\"])",
                    "as": "lowerWhisker"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"lowerBox\"])",
                    "as": "lowerBox"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"lowerWhisker\"] !== null && !isNaN(datum[\"lowerWhisker\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"upperBox\"])",
                    "as": "upperBox"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"upperWhisker\"])",
                    "as": "upperWhisker"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"upperBox\"] !== null && !isNaN(datum[\"upperBox\"])"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"lowerBox\"])",
                    "as": "lowerBox"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"upperBox\"])",
                    "as": "upperBox"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"lowerBox\"] !== null && !isNaN(datum[\"lowerBox\"])"
                }
            ]
        },
        {
            "name": "data_3",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"midBox\"])",
                    "as": "midBox"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"midBox\"] !== null && !isNaN(datum[\"midBox\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "x_step",
            "value": 21
        },
        {
            "name": "width",
            "update": "bandspace(domain('x').length, 0.1, 0.05) * x_step"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rule",
            "style": [
                "rule",
                "boxWhisker"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "age",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "y",
                        "field": "lowerWhisker"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "lowerBox"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rule",
            "style": [
                "rule",
                "boxWhisker"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "age",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "y",
                        "field": "upperBox"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "upperWhisker"
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "age",
                        "band": 0.5
                    },
                    "width": {
                        "value": 5
                    },
                    "y": {
                        "scale": "y",
                        "field": "lowerBox"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "upperBox"
                    }
                }
            }
        },
        {
            "name": "layer_3_marks",
            "type": "rect",
            "style": [
                "tick",
                "boxMid"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "white"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "age",
                        "band": 0.5
                    },
                    "yc": {
                        "scale": "y",
                        "field": "midBox"
                    },
                    "width": {
                        "value": 5
                    },
                    "height": {
                        "value": 1
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "age"
                    },
                    {
                        "data": "data_1",
                        "field": "age"
                    },
                    {
                        "data": "data_2",
                        "field": "age"
                    },
                    {
                        "data": "data_3",
                        "field": "age"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "x_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "lowerWhisker"
                    },
                    {
                        "data": "data_0",
                        "field": "lowerBox"
                    },
                    {
                        "data": "data_1",
                        "field": "upperBox"
                    },
                    {
                        "data": "data_1",
                        "field": "upperWhisker"
                    },
                    {
                        "data": "data_2",
                        "field": "lowerBox"
                    },
                    {
                        "data": "data_2",
                        "field": "upperBox"
                    },
                    {
                        "data": "data_3",
                        "field": "midBox"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "labelOverlap": true,
            "title": "age",
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "population",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
