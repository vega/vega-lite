{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "A horizontal box plot showing median, min, and max in the US population distribution of age groups in 2000.",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/population.json",
      "format": {"type": "json"}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["q1", "q3", "median", "min", "max"],
          "fields": ["people", "people", "people", "people", "people"],
          "as": [
            "lower_box_people",
            "upper_box_people",
            "mid_box_people",
            "min_people",
            "max_people"
          ]
        },
        {
          "type": "formula",
          "expr": "datum.upper_box_people - datum.lower_box_people",
          "as": "iqr_people"
        },
        {
          "type": "formula",
          "expr": "min(datum.upper_box_people + datum.iqr_people * 1.5, datum.max_people)",
          "as": "upper_whisker_people"
        },
        {
          "type": "formula",
          "expr": "max(datum.lower_box_people - datum.iqr_people * 1.5, datum.min_people)",
          "as": "lower_whisker_people"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "window",
          "params": [null, null],
          "as": ["lower_box_people", "upper_box_people"],
          "ops": ["q1", "q3"],
          "fields": ["people", "people"],
          "sort": {"field": [], "order": []},
          "groupby": ["age"],
          "frame": [null, null]
        },
        {
          "type": "filter",
          "expr": "(datum.people < datum.lower_box_people - 1.5 * (datum.upper_box_people - datum.lower_box_people)) || (datum.people > datum.upper_box_people + 1.5 * (datum.upper_box_people - datum.lower_box_people))"
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 21},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "layer_0_layer_0_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"lower_whisker_people\"] === null || isNaN(datum[\"lower_whisker_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": ''+datum[\"age\"], \"lower_box_people\": format(datum[\"lower_box_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "lower_whisker_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "x2": {"scale": "x", "field": "lower_box_people"}
        }
      }
    },
    {
      "name": "layer_0_layer_1_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"upper_box_people\"] === null || isNaN(datum[\"upper_box_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"upper_box_people\"], \"\"), \"age\": ''+datum[\"age\"], \"upper_whisker_people\": format(datum[\"upper_whisker_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "upper_box_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "x2": {"scale": "x", "field": "upper_whisker_people"}
        }
      }
    },
    {
      "name": "layer_0_layer_2_marks",
      "type": "rect",
      "style": ["bar", "boxplot-box"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"lower_box_people\"] === null || isNaN(datum[\"lower_box_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"lower_box_people\"], \"\"), \"age\": ''+datum[\"age\"], \"upper_box_people\": format(datum[\"upper_box_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "lower_box_people"},
          "x2": {"scale": "x", "field": "upper_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14}
        }
      }
    },
    {
      "name": "layer_0_layer_3_marks",
      "type": "rect",
      "style": ["tick", "boxplot-median"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": [
            {
              "test": "datum[\"mid_box_people\"] === null || isNaN(datum[\"mid_box_people\"])",
              "value": null
            },
            {"value": "white"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"mid_box_people\"], \"\"), \"age\": ''+datum[\"age\"]}"
          },
          "xc": {"scale": "x", "field": "mid_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14},
          "width": {"value": 1}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["point", "boxplot-outliers"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": [
            {
              "test": "datum[\"people\"] === null || isNaN(datum[\"people\"])",
              "value": null
            },
            {"value": "transparent"}
          ],
          "stroke": [
            {
              "test": "datum[\"people\"] === null || isNaN(datum[\"people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"people\": format(datum[\"people\"], \"\"), \"age\": ''+datum[\"age\"]}"
          },
          "x": {"scale": "x", "field": "people"},
          "y": {"scale": "y", "field": "age", "band": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "lower_whisker_people"},
          {"data": "data_0", "field": "lower_box_people"},
          {"data": "data_0", "field": "upper_box_people"},
          {"data": "data_0", "field": "upper_whisker_people"},
          {"data": "data_0", "field": "mid_box_people"},
          {"data": "data_1", "field": "people"}
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "age"},
          {"data": "data_1", "field": "age"}
        ],
        "sort": true
      },
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "population",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "age",
      "labelOverlap": true,
      "zindex": 1
    }
  ],
  "config": {
    "axisY": {"minExtent": 30},
    "legend": {"gradientDirection": "horizontal", "gradientLength": 100}
  }
}
