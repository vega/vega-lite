{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "A horizontal box plot showing median, min, and max in the US population distribution of age groups in 2000.",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/population.json",
      "format": {"type": "json", "parse": {}},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["q1", "q3", "median", "min", "max"],
          "fields": ["people", "people", "people", "people", "people"],
          "as": [
            "lower_box_people",
            "upper_box_people",
            "mid_box_people",
            "lower_whisker_people",
            "upper_whisker_people"
          ]
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 21},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"lower_whisker_people\"] === null || isNaN(datum[\"lower_whisker_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": ''+datum[\"age\"], \"lower_box_people\": format(datum[\"lower_box_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "lower_whisker_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "x2": {"scale": "x", "field": "lower_box_people"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"upper_box_people\"] === null || isNaN(datum[\"upper_box_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"upper_box_people\"], \"\"), \"age\": ''+datum[\"age\"], \"upper_whisker_people\": format(datum[\"upper_whisker_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "upper_box_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "x2": {"scale": "x", "field": "upper_whisker_people"}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "rect",
      "style": ["bar", "boxplot-box"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"lower_box_people\"] === null || isNaN(datum[\"lower_box_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"lower_box_people\"], \"\"), \"age\": ''+datum[\"age\"], \"upper_box_people\": format(datum[\"upper_box_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "lower_box_people"},
          "x2": {"scale": "x", "field": "upper_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "rect",
      "style": ["tick", "boxplot-median"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": [
            {
              "test": "datum[\"mid_box_people\"] === null || isNaN(datum[\"mid_box_people\"])",
              "value": null
            },
            {"value": "orange"}
          ],
          "tooltip": {
            "signal": "{\"population\": format(datum[\"mid_box_people\"], \"\"), \"age\": ''+datum[\"age\"]}"
          },
          "xc": {"scale": "x", "field": "mid_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14},
          "width": {"value": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": [
          "lower_whisker_people",
          "lower_box_people",
          "upper_box_people",
          "upper_whisker_people",
          "mid_box_people"
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "age", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "population",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "age",
      "labelOverlap": true,
      "zindex": 1
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
