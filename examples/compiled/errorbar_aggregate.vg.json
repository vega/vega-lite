{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "A error bar plot showing mean, min, and max in the US population distribution of age groups in 2000.",
  "autosize": "pad",
  "padding": 5,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/population.json",
      "format": {"type": "json"},
      "transform": [{"type": "filter", "expr": "datum.year == 2000"}]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"people\"])",
          "as": "people"
        },
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["min", "max"],
          "fields": ["people", "people"],
          "as": ["min_people", "max_people"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"people\"])",
          "as": "people"
        },
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["min"],
          "fields": ["people"],
          "as": ["min_people"]
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"people\"])",
          "as": "people"
        },
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["max"],
          "fields": ["people"],
          "as": ["max_people"]
        }
      ]
    },
    {
      "name": "data_3",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"people\"])",
          "as": "people"
        },
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["mean"],
          "fields": ["people"],
          "as": ["mean_people"]
        }
      ]
    }
  ],
  "signals": [
    {"name": "x_step", "value": 21},
    {
      "name": "width",
      "update": "bandspace(domain('x').length, 0.1, 0.05) * x_step"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rule",
      "style": ["rule"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"min_people\"] === null || isNaN(datum[\"min_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"Min of people\": format(datum[\"min_people\"], \"\"), \"Max of people\": format(datum[\"max_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "age", "band": 0.5},
          "y": {"scale": "y", "field": "min_people"},
          "y2": {"scale": "y", "field": "max_people"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rect",
      "style": ["tick"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"min_people\"] === null || isNaN(datum[\"min_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"Min of people\": format(datum[\"min_people\"], \"\")}"
          },
          "xc": {"scale": "x", "field": "age", "band": 0.5},
          "yc": {"scale": "y", "field": "min_people"},
          "width": {"value": 5},
          "height": {"value": 1}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "rect",
      "style": ["tick"],
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"max_people\"] === null || isNaN(datum[\"max_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"Max of people\": format(datum[\"max_people\"], \"\")}"
          },
          "xc": {"scale": "x", "field": "age", "band": 0.5},
          "yc": {"scale": "y", "field": "max_people"},
          "width": {"value": 5},
          "height": {"value": 1}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "symbol",
      "style": ["point"],
      "from": {"data": "data_3"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"mean_people\"] === null || isNaN(datum[\"mean_people\"])",
              "value": null
            },
            {"value": "transparent"}
          ],
          "stroke": [
            {
              "test": "datum[\"mean_people\"] === null || isNaN(datum[\"mean_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"Mean of people\": format(datum[\"mean_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "age", "band": 0.5},
          "y": {"scale": "y", "field": "mean_people"},
          "size": {"value": 2}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "age"},
          {"data": "data_1", "field": "age"},
          {"data": "data_2", "field": "age"},
          {"data": "data_3", "field": "age"}
        ],
        "sort": true
      },
      "range": {"step": {"signal": "x_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "min_people"},
          {"data": "data_0", "field": "max_people"},
          {"data": "data_1", "field": "min_people"},
          {"data": "data_2", "field": "max_people"},
          {"data": "data_3", "field": "mean_people"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "age",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "labelOverlap": true,
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "population",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridScale": "x",
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
