{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A bar chart showing the US population distribution of age groups in 2000.",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/population.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.year == 2000"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age"
                    ],
                    "ops": [
                        "min",
                        "max"
                    ],
                    "fields": [
                        "people",
                        "people"
                    ],
                    "as": [
                        "min_people",
                        "max_people"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age"
                    ],
                    "ops": [
                        "min"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "min_people"
                    ]
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age"
                    ],
                    "ops": [
                        "max"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "max_people"
                    ]
                }
            ]
        },
        {
            "name": "data_3",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "mean_people"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rule",
            "style": [
                "rule"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "min_people"
                    },
                    "y": {
                        "scale": "y",
                        "field": "age",
                        "band": 0.5
                    },
                    "x2": {
                        "scale": "x",
                        "field": "max_people"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rect",
            "style": [
                "tick"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "min_people"
                    },
                    "yc": {
                        "scale": "y",
                        "field": "age",
                        "band": 0.5
                    },
                    "height": {
                        "value": 5
                    },
                    "width": {
                        "value": 1
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "rect",
            "style": [
                "tick"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "max_people"
                    },
                    "yc": {
                        "scale": "y",
                        "field": "age",
                        "band": 0.5
                    },
                    "height": {
                        "value": 5
                    },
                    "width": {
                        "value": 1
                    }
                }
            }
        },
        {
            "name": "layer_3_marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "#4c78a8"
                    },
                    "fill": {
                        "value": "transparent"
                    },
                    "x": {
                        "scale": "x",
                        "field": "mean_people"
                    },
                    "y": {
                        "scale": "y",
                        "field": "age",
                        "band": 0.5
                    },
                    "size": {
                        "value": 2
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "min_people"
                    },
                    {
                        "data": "data_0",
                        "field": "max_people"
                    },
                    {
                        "data": "data_1",
                        "field": "min_people"
                    },
                    {
                        "data": "data_2",
                        "field": "max_people"
                    },
                    {
                        "data": "data_3",
                        "field": "mean_people"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "age"
                    },
                    {
                        "data": "data_1",
                        "field": "age"
                    },
                    {
                        "data": "data_2",
                        "field": "age"
                    },
                    {
                        "data": "data_3",
                        "field": "age"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "axes": [
        {
            "title": "population",
            "scale": "x",
            "orient": "bottom",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "labelOverlap": true,
            "title": "age",
            "zindex": 1
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
