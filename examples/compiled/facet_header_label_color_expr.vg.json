{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Test conditional header labelColor and other label properties with datum.value expressions. This demonstrates that header signal expressions (labelColor, labelFontWeight, labelFontSize) work consistently with axis signal expressions.",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_0",
      "values": [
        {"a": "A", "b": 1, "c": "One"},
        {"a": "A", "b": 2, "c": "One"},
        {"a": "B", "b": 3, "c": "Two"},
        {"a": "B", "b": 4, "c": "Two"}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": ["a", "c"],
          "field": "b",
          "sort": {"field": [], "order": []},
          "as": ["b_start", "b_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"b\"]) && isFinite(+datum[\"b\"])"
        }
      ]
    },
    {
      "name": "column_domain",
      "source": "data_0",
      "transform": [{"type": "aggregate", "groupby": ["c"]}]
    }
  ],
  "signals": [
    {"name": "x_step", "value": 20},
    {
      "name": "child_width",
      "update": "bandspace(domain('x').length, 0.1, 0.05) * x_step"
    },
    {"name": "child_height", "value": 300}
  ],
  "layout": {
    "padding": 20,
    "offset": {"columnTitle": 10},
    "columns": {"signal": "length(data('column_domain'))"},
    "bounds": "full",
    "align": "all"
  },
  "marks": [
    {
      "name": "column-title",
      "type": "group",
      "role": "column-title",
      "title": {"text": "c", "style": "guide-title", "offset": 10}
    },
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "encode": {"update": {"height": {"signal": "child_height"}}},
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "b",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(child_height/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_header",
      "type": "group",
      "role": "column-header",
      "from": {"data": "column_domain"},
      "sort": {"field": "datum[\"c\"]", "order": "ascending"},
      "title": {
        "text": {"signal": "parent[\"c\"] === \"One\" ? \"ONE\" : \"TWO\""},
        "style": "guide-label",
        "frame": "group",
        "color": {
          "signal": "parent[\"c\"] === \"One\" ? \"green\" : \"purple\""
        },
        "fontSize": {"signal": "parent[\"c\"] === \"One\" ? 16 : 12"},
        "fontWeight": {
          "signal": "parent[\"c\"] === \"One\" ? \"bold\" : \"normal\""
        },
        "offset": 10
      },
      "encode": {"update": {"width": {"signal": "child_width"}}}
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "from": {"data": "column_domain"},
      "sort": {"field": "datum[\"c\"]", "order": "ascending"},
      "encode": {"update": {"width": {"signal": "child_width"}}},
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "a",
          "labelAlign": "right",
          "labelAngle": 270,
          "labelBaseline": "middle",
          "encode": {
            "labels": {
              "update": {
                "fill": {
                  "signal": "datum.value === \"A\" ? \"blue\" : \"red\""
                },
                "text": {"signal": "datum.value === \"A\" ? \"AA\" : \"BB\""}
              }
            }
          },
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "style": "cell",
      "from": {"facet": {"name": "facet", "data": "data_0", "groupby": ["c"]}},
      "sort": {"field": ["datum[\"c\"]"], "order": ["ascending"]},
      "encode": {
        "update": {
          "width": {"signal": "child_width"},
          "height": {"signal": "child_height"}
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "rect",
          "style": ["bar"],
          "from": {"data": "facet"},
          "encode": {
            "update": {
              "fill": {"value": "#4c78a8"},
              "ariaRoleDescription": {"value": "bar"},
              "description": {
                "signal": "\"a: \" + (isValid(datum[\"a\"]) ? isArray(datum[\"a\"]) ? join(datum[\"a\"], ' ') : datum[\"a\"] : \"\"+datum[\"a\"]) + \"; b: \" + (format(datum[\"b\"], \"\"))"
              },
              "x": {"scale": "x", "field": "a"},
              "width": {"signal": "max(0.25, bandwidth('x'))"},
              "y": {"scale": "y", "field": "b_end"},
              "y2": {"scale": "y", "field": "b_start"}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "gridScale": "x",
          "grid": true,
          "tickCount": {"signal": "ceil(child_height/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {"data": "data_0", "field": "a", "sort": true},
      "range": {"step": {"signal": "x_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "data_0", "fields": ["b_start", "b_end"]},
      "range": [{"signal": "child_height"}, 0],
      "nice": true,
      "zero": true
    }
  ]
}
