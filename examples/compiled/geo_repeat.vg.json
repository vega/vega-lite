{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "the population per state, engineers per state, and hurricanes per state",
  "autosize": "pad",
  "padding": 5,
  "width": 500,
  "height": 300,
  "data": [
    {
      "name": "source_0",
      "url": "data/population_engineers_hurricanes.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "source_1",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"population\"])",
          "as": "population"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child_population_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"population\"] !== null && !isNaN(datum[\"population\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"engineers\"])",
          "as": "engineers"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child_engineers_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"engineers\"] !== null && !isNaN(datum[\"engineers\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"hurricanes\"])",
          "as": "hurricanes"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child_hurricanes_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"hurricanes\"] !== null && !isNaN(datum[\"hurricanes\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {
        "signal": "[child_population_geojson_0, child_engineers_geojson_0, child_hurricanes_geojson_0]"
      },
      "type": "albersUsa"
    }
  ],
  "layout": {
    "padding": {"row": 10, "column": 10},
    "columns": 1,
    "bounds": "full",
    "align": "all"
  },
  "marks": [
    {
      "type": "group",
      "name": "child_population_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child_population_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_0"},
          "encode": {
            "update": {
              "fill": {
                "scale": "child_population_color",
                "field": "population"
              },
              "tooltip": {
                "signal": "{\"population\": format(datum[\"population\"], \"\"), \"geo\": ''+datum[\"geo\"]}"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [{"fill": "child_population_color", "title": "population"}]
    },
    {
      "type": "group",
      "name": "child_engineers_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child_engineers_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_1"},
          "encode": {
            "update": {
              "fill": {"scale": "child_engineers_color", "field": "engineers"},
              "tooltip": {
                "signal": "{\"engineers\": format(datum[\"engineers\"], \"\"), \"geo\": ''+datum[\"geo\"]}"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [{"fill": "child_engineers_color", "title": "engineers"}]
    },
    {
      "type": "group",
      "name": "child_hurricanes_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child_hurricanes_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_2"},
          "encode": {
            "update": {
              "fill": {
                "scale": "child_hurricanes_color",
                "field": "hurricanes"
              },
              "tooltip": {
                "signal": "{\"hurricanes\": format(datum[\"hurricanes\"], \"\"), \"geo\": ''+datum[\"geo\"]}"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [{"fill": "child_hurricanes_color", "title": "hurricanes"}]
    }
  ],
  "scales": [
    {
      "name": "child_population_color",
      "type": "sequential",
      "domain": {"data": "data_0", "field": "population"},
      "range": "heatmap",
      "zero": false
    },
    {
      "name": "child_engineers_color",
      "type": "sequential",
      "domain": {"data": "data_1", "field": "engineers"},
      "range": "heatmap",
      "zero": false
    },
    {
      "name": "child_hurricanes_color",
      "type": "sequential",
      "domain": {"data": "data_2", "field": "hurricanes"},
      "range": "heatmap",
      "zero": false
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
