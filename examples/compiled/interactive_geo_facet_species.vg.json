{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_1",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "counties"}
    },
    {
      "name": "source_0",
      "url": "data/species.csv",
      "format": {"type": "csv", "parse": {"county_id": "number"}},
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["county_id"],
          "as": ["geo"]
        },
        {"type": "filter", "expr": "isValid(datum[\"geo\"])"},
        {"type": "geojson", "geojson": "geo", "signal": "child_geojson_0"},
        {
          "type": "filter",
          "expr": "isValid(datum[\"habitat_yearround_pct\"]) && isFinite(+datum[\"habitat_yearround_pct\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[child_width, child_height]"},
      "fit": {"signal": "child_geojson_0"},
      "type": "albers"
    }
  ],
  "signals": [
    {"name": "child_width", "value": 300},
    {"name": "child_height", "value": 200}
  ],
  "layout": {"padding": 20, "bounds": "full", "align": "all", "columns": 2},
  "marks": [
    {
      "name": "cell",
      "type": "group",
      "title": {
        "text": {
          "signal": "isValid(parent[\"common_name\"]) ? parent[\"common_name\"] : \"\"+parent[\"common_name\"]"
        },
        "style": "guide-label",
        "frame": "group",
        "fontSize": 14,
        "offset": 10
      },
      "style": "view",
      "from": {
        "facet": {
          "name": "facet",
          "data": "source_0",
          "groupby": ["common_name"]
        }
      },
      "sort": {"field": ["datum[\"common_name\"]"], "order": ["ascending"]},
      "encode": {
        "update": {
          "width": {"signal": "child_width"},
          "height": {"signal": "child_height"}
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "facet"},
          "encode": {
            "update": {
              "fill": {"scale": "color", "field": "habitat_yearround_pct"},
              "tooltip": {
                "signal": "{\"County ID\": isValid(datum[\"county_id\"]) ? datum[\"county_id\"] : \"\"+datum[\"county_id\"], \"Habitat %\": format(datum[\"habitat_yearround_pct\"], \".2%\")}"
              },
              "ariaRoleDescription": {"value": "geoshape"},
              "description": {
                "signal": "\"Suitable Habitat, % of County: \" + (format(datum[\"habitat_yearround_pct\"], \".0%\")) + \"; geo: \" + (isValid(datum[\"geo\"]) ? datum[\"geo\"] : \"\"+datum[\"geo\"]) + \"; County ID: \" + (isValid(datum[\"county_id\"]) ? datum[\"county_id\"] : \"\"+datum[\"county_id\"]) + \"; Habitat %: \" + (format(datum[\"habitat_yearround_pct\"], \".2%\"))"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_0", "field": "habitat_yearround_pct"},
      "range": {"scheme": "viridis"},
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "format": ".0%",
      "title": ["Suitable Habitat", "% of County"],
      "fill": "color",
      "gradientLength": {"signal": "clamp(child_height, 64, 200)"}
    }
  ]
}
