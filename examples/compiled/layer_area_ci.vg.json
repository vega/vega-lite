{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "year_Year"
                    ],
                    "ops": [
                        "ci0",
                        "ci1"
                    ],
                    "fields": [
                        "Miles_per_Gallon",
                        "Miles_per_Gallon"
                    ],
                    "as": [
                        "ci0_Miles_per_Gallon",
                        "ci1_Miles_per_Gallon"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "year_Year"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Miles_per_Gallon"
                    ],
                    "as": [
                        "mean_Miles_per_Gallon"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "area",
            "style": [
                "area"
            ],
            "sort": {
                "field": "datum[\"year_Year\"]",
                "order": "descending"
            },
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "year_Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "ci0_Miles_per_Gallon"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "ci1_Miles_per_Gallon"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "opacity": {
                        "value": 0.3
                    },
                    "orient": {
                        "value": "vertical"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "line",
            "style": [
                "line"
            ],
            "sort": {
                "field": "datum[\"year_Year\"]",
                "order": "descending"
            },
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "year_Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_Miles_per_Gallon"
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "year_Year"
                    },
                    {
                        "data": "data_1",
                        "field": "year_Year"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "ci0_Miles_per_Gallon"
                    },
                    {
                        "data": "data_0",
                        "field": "ci1_Miles_per_Gallon"
                    },
                    {
                        "data": "data_1",
                        "field": "mean_Miles_per_Gallon"
                    }
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "Year (year)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            }
        },
        {
            "scale": "x",
            "orient": "bottom",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "title": "Miles/Gallon",
            "scale": "y",
            "orient": "left",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
