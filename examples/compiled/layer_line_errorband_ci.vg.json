{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/cars.json",
      "format": {"type": "json", "parse": {"Year": "date"}}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "as": "year_Year",
          "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year"],
          "ops": ["mean"],
          "fields": ["Miles_per_Gallon"],
          "as": ["mean_Miles_per_Gallon"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "as": "year_Year",
          "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year"],
          "ops": ["ci0", "ci1"],
          "fields": ["Miles_per_Gallon", "Miles_per_Gallon"],
          "as": ["lower_Miles_per_Gallon", "upper_Miles_per_Gallon"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_layer_0_marks",
      "type": "area",
      "style": ["area", "errorband-band"],
      "sort": {"field": "datum[\"year_Year\"]", "order": "descending"},
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.3},
          "orient": {"value": "vertical"},
          "fill": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"Ci1 of Miles_per_Gallon\": format(datum[\"upper_Miles_per_Gallon\"], \"\"), \"Ci0 of Miles_per_Gallon\": format(datum[\"lower_Miles_per_Gallon\"], \"\"), \"Year (year)\": timeFormat(datum[\"year_Year\"], '%Y')}"
          },
          "x": {"scale": "x", "field": "year_Year"},
          "y": {"scale": "y", "field": "lower_Miles_per_Gallon"},
          "y2": {"scale": "y", "field": "upper_Miles_per_Gallon"},
          "defined": {
            "signal": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"]) && datum[\"lower_Miles_per_Gallon\"] !== null && !isNaN(datum[\"lower_Miles_per_Gallon\"])"
          }
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"year_Year\"]", "order": "descending"},
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"Year (year)\": timeFormat(datum[\"year_Year\"], '%Y'), \"Mean of Miles_per_Gallon\": format(datum[\"mean_Miles_per_Gallon\"], \"\")}"
          },
          "x": {"scale": "x", "field": "year_Year"},
          "y": {"scale": "y", "field": "mean_Miles_per_Gallon"},
          "defined": {
            "signal": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"]) && datum[\"mean_Miles_per_Gallon\"] !== null && !isNaN(datum[\"mean_Miles_per_Gallon\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "year_Year"},
          {"data": "data_0", "field": "year_Year"}
        ]
      },
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "lower_Miles_per_Gallon"},
          {"data": "data_1", "field": "upper_Miles_per_Gallon"},
          {"data": "data_0", "field": "mean_Miles_per_Gallon"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year (year)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "encode": {
        "labels": {
          "update": {"text": {"signal": "timeFormat(datum.value, '%Y')"}}
        }
      },
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Mean of Miles per Gallon (95% CIs)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
