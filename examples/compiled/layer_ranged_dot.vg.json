{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "A ranged dot plot that uses 'layer' to convey changing life expectancy for the five most populous countries (between 1955 and 2000).",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/countries.json",
      "format": {
        "type": "json",
        "parse": {
          "country": "string",
          "year": "number",
          "life_expect": "number"
        }
      },
      "transform": [
        {
          "type": "filter",
          "expr": "indexof([\"China\",\"India\",\"United States\",\"Indonesia\",\"Brazil\"], datum[\"country\"]) !== -1"
        },
        {
          "type": "filter",
          "expr": "indexof([1955,2000], datum[\"year\"]) !== -1"
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 21},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 1, 0.5) * y_step"
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["country"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"country\"]", "order": "descending"},
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "stroke": {"value": "#db646f"},
              "tooltip": {
                "signal": "{\"Life Expectancy (years)\": format(datum[\"life_expect\"], \"\"), \"Country\": ''+datum[\"country\"], \"country\": ''+datum[\"country\"]}"
              },
              "x": {"scale": "x", "field": "life_expect"},
              "y": {"scale": "y", "field": "country"},
              "defined": {
                "signal": "datum[\"life_expect\"] !== null && !isNaN(datum[\"life_expect\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["point"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "opacity": {"value": 1},
          "fill": [
            {
              "test": "datum[\"life_expect\"] === null || isNaN(datum[\"life_expect\"])",
              "value": null
            },
            {"scale": "color", "field": "year"}
          ],
          "tooltip": {
            "signal": "{\"Life Expectancy (years)\": format(datum[\"life_expect\"], \"\"), \"Country\": ''+datum[\"country\"], \"Year\": ''+datum[\"year\"]}"
          },
          "x": {"scale": "x", "field": "life_expect"},
          "y": {"scale": "y", "field": "country"},
          "size": {"value": 100}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "source_0", "field": "life_expect"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "point",
      "domain": {"data": "source_0", "field": "country", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "padding": 0.5
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [1955, 2000],
      "range": ["#e6959c", "#911a24"]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Life Expectancy (years)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Country",
      "domain": false,
      "minExtent": 70,
      "offset": 5,
      "ticks": false,
      "zindex": 1
    }
  ],
  "legends": [
    {
      "title": "Year",
      "fill": "color",
      "encode": {"symbols": {"update": {"opacity": {"value": 1}}}}
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
