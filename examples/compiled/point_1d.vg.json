{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/movies.json",
            "format": {
                "type": "json",
                "parse": {
                    "IMDB_Rating": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"IMDB_Rating\"] !== null && !isNaN(datum[\"IMDB_Rating\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "21"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "IMDB_Rating"
                    },
                    "y": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    },
                    "fill": {
                        "value": "transparent"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "IMDB_Rating"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "round": true,
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "IMDB_Rating",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axis": {
            "domainColor": "#888",
            "tickColor": "#888"
        },
        "axisY": {
            "minExtent": 30
        }
    }
}
