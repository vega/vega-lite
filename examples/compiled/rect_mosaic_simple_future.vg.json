{
    "$schema": "https://vega.github.io/schema/vega/v3.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Cylinders": "number"
                }
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Origin",
                        "Cylinders"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                },
                {
                    "type": "stack",
                    "groupby": [],
                    "field": "count_*",
                    "sort": {
                        "field": [
                            "Origin"
                        ],
                        "order": [
                            "ascending"
                        ]
                    },
                    "as": [
                        "stack_count_Origin1",
                        "stack_count_Origin2"
                    ],
                    "offset": "normalize"
                },
                {
                    "type": "window",
                    "params": [
                        null,
                        null
                    ],
                    "as": [
                        "x",
                        "x2"
                    ],
                    "ops": [
                        "min",
                        "max"
                    ],
                    "fields": [
                        "stack_count_Origin1",
                        "stack_count_Origin2"
                    ],
                    "sort": {
                        "field": [],
                        "order": []
                    },
                    "groupby": [
                        "Origin"
                    ],
                    "frame": [
                        null,
                        null
                    ]
                },
                {
                    "type": "stack",
                    "groupby": [
                        "Origin"
                    ],
                    "field": "count_*",
                    "sort": {
                        "field": [
                            "Cylinders"
                        ],
                        "order": [
                            "ascending"
                        ]
                    },
                    "as": [
                        "y",
                        "y2"
                    ],
                    "offset": "normalize"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"x\"] !== null && !isNaN(datum[\"x\"]) && datum[\"y\"] !== null && !isNaN(datum[\"y\"]) && datum[\"Cylinders\"] !== null && !isNaN(datum[\"Cylinders\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "style": [
                "rect"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "scale": "color",
                        "field": "Origin"
                    },
                    "opacity": {
                        "scale": "opacity",
                        "field": "Cylinders"
                    },
                    "tooltip": {
                        "signal": "{\"Origin\": ''+datum[\"Origin\"], \"Cylinders\": format(datum[\"Cylinders\"], \"\")}"
                    },
                    "x": {
                        "scale": "x",
                        "field": "x"
                    },
                    "x2": {
                        "scale": "x",
                        "field": "x2"
                    },
                    "y": {
                        "scale": "y",
                        "field": "y"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "y2"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "x",
                    "x2"
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "y",
                    "y2"
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "Origin",
                "sort": true
            },
            "range": "category"
        },
        {
            "name": "opacity",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Cylinders"
            },
            "range": [
                0.3,
                0.8
            ],
            "nice": false,
            "zero": false
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "Origin"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
