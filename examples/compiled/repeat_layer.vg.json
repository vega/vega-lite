                  "defined": {
                    "signal": "datum[\"mean_precipitation\"] !== null && !isNaN(datum[\"mean_precipitation\"])"
                  }
                }
              }
            }
          ]
        },
        {
          "name": "child_precipitation_layer_1_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_child_precipitation_layer_1_main",
