{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Shows the relationship between horsepower and the numbver of cylinders using tick marks.",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 1, 0.5) * y_step"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "style": [
                "tick"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "xc": {
                        "scale": "x",
                        "field": "Horsepower"
                    },
                    "yc": {
                        "scale": "y",
                        "field": "Cylinders"
                    },
                    "height": {
                        "value": 14
                    },
                    "width": {
                        "value": 1
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Horsepower"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "point",
            "domain": {
                "data": "source_0",
                "field": "Cylinders",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "round": true,
            "padding": 0.5
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "Horsepower",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "title": "Cylinders",
            "zindex": 1
        }
    ],
    "config": {
        "axis": {
            "domainColor": "#888",
            "tickColor": "#888"
        },
        "axisY": {
            "minExtent": 30
        }
    }
}
