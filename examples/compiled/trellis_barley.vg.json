{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "The Trellis display by Becker et al. helped establish small multiples as a “powerful mechanism for understanding interactions in studies of how a response depends on explanatory variables”. Here we reproduce a trellis of Barley yields from the 1930s, complete with main-effects ordering to facilitate comparison.",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_0",
            "url": "data/barley.json",
            "format": {
                "type": "json",
                "parse": {
                    "yield": "number"
                }
            }
        },
        {
            "name": "trellis_barley_row",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "site"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "variety",
                        "year",
                        "site"
                    ],
                    "ops": [
                        "median"
                    ],
                    "fields": [
                        "yield"
                    ],
                    "as": [
                        "median_yield"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "trellis_barley_child_width",
            "update": "200"
        },
        {
            "name": "trellis_barley_y_step",
            "value": 12
        },
        {
            "name": "trellis_barley_child_height",
            "update": "bandspace(domain('trellis_barley_y').length, 1, 0.5) * trellis_barley_y_step"
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "columns": 1,
        "bounds": "full",
        "align": "all"
    },
    "marks": [
        {
            "name": "trellis_barley_row_title",
            "role": "row-title",
            "type": "group",
            "marks": [
                {
                    "type": "text",
                    "role": "row-title-text",
                    "encode": {
                        "update": {
                            "align": {
                                "value": "center"
                            },
                            "text": {
                                "value": "site"
                            },
                            "fill": {
                                "value": "black"
                            },
                            "fontWeight": {
                                "value": "bold"
                            },
                            "angle": {
                                "value": 270
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "trellis_barley_row_header",
            "type": "group",
            "role": "row-header",
            "from": {
                "data": "trellis_barley_row"
            },
            "sort": {
                "field": "datum[\"site\"]",
                "order": "ascending"
            },
            "title": {
                "text": {
                    "signal": "parent[\"site\"]"
                },
                "offset": 10,
                "orient": "left",
                "encode": {
                    "update": {
                        "fontWeight": {
                            "value": "normal"
                        },
                        "angle": {
                            "value": 0
                        },
                        "fontSize": {
                            "value": 10
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            },
            "encode": {
                "update": {
                    "height": {
                        "signal": "trellis_barley_child_height"
                    }
                }
            },
            "axes": [
                {
                    "scale": "trellis_barley_y",
                    "labelOverlap": true,
                    "orient": "left",
                    "title": "variety",
                    "zindex": 1
                }
            ]
        },
        {
            "name": "trellis_barley_column_footer",
            "type": "group",
            "role": "column-footer",
            "encode": {
                "update": {
                    "width": {
                        "signal": "trellis_barley_child_width"
                    }
                }
            },
            "axes": [
                {
                    "scale": "trellis_barley_x",
                    "labelOverlap": true,
                    "orient": "bottom",
                    "tickCount": {
                        "signal": "ceil(trellis_barley_child_width/40)"
                    },
                    "title": "MEDIAN(yield)",
                    "zindex": 1
                }
            ]
        },
        {
            "name": "trellis_barley_cell",
            "type": "group",
            "from": {
                "facet": {
                    "name": "trellis_barley_facet",
                    "data": "source_0",
                    "groupby": [
                        "site"
                    ]
                }
            },
            "sort": {
                "field": [
                    "datum[\"site\"]"
                ],
                "order": [
                    "ascending"
                ]
            },
            "data": [
                {
                    "source": "trellis_barley_facet",
                    "name": "data_0",
                    "transform": [
                        {
                            "type": "aggregate",
                            "groupby": [
                                "variety",
                                "year"
                            ],
                            "ops": [
                                "median"
                            ],
                            "fields": [
                                "yield"
                            ],
                            "as": [
                                "median_yield"
                            ]
                        }
                    ]
                }
            ],
            "encode": {
                "update": {
                    "width": {
                        "signal": "trellis_barley_child_width"
                    },
                    "height": {
                        "signal": "trellis_barley_child_height"
                    },
                    "stroke": {
                        "value": "#ccc"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "trellis_barley_child_marks",
                    "type": "symbol",
                    "role": "point",
                    "from": {
                        "data": "data_0"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "trellis_barley_x",
                                "field": "median_yield"
                            },
                            "y": {
                                "scale": "trellis_barley_y",
                                "field": "variety"
                            },
                            "stroke": {
                                "scale": "trellis_barley_color",
                                "field": "year"
                            },
                            "fill": {
                                "value": "transparent"
                            }
                        }
                    }
                }
            ],
            "axes": [
                {
                    "scale": "trellis_barley_x",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "orient": "bottom",
                    "tickCount": {
                        "signal": "ceil(trellis_barley_child_width/40)"
                    },
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "trellis_barley_y"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "trellis_barley_x",
            "type": "linear",
            "domain": {
                "data": "data_1",
                "field": "median_yield"
            },
            "range": [
                0,
                {
                    "signal": "trellis_barley_child_width"
                }
            ],
            "zero": false,
            "round": true,
            "nice": true
        },
        {
            "name": "trellis_barley_y",
            "type": "point",
            "domain": {
                "data": "source_0",
                "field": "variety",
                "sort": {
                    "field": "yield",
                    "op": "median",
                    "order": "descending"
                }
            },
            "range": {
                "step": {
                    "signal": "trellis_barley_y_step"
                }
            },
            "round": true,
            "padding": 0.5
        },
        {
            "name": "trellis_barley_color",
            "type": "ordinal",
            "domain": {
                "data": "data_1",
                "field": "year",
                "sort": true
            },
            "range": "category"
        }
    ],
    "legends": [
        {
            "stroke": "trellis_barley_color",
            "title": "year"
        }
    ],
    "config": {
        "axis": {
            "minExtent": 30,
            "domainColor": "#888",
            "tickColor": "#888"
        }
    }
}
