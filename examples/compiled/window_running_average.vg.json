{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A line graph showing how the average rating for how the MPG has changed over the years. The red line shows the average, and is layered on top of all the raw data.",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.Miles_per_Gallon !== null"
                },
                {
                    "type": "window",
                    "params": [
                        null
                    ],
                    "as": [
                        "Average_MPG"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Miles_per_Gallon"
                    ],
                    "sort": {
                        "field": [],
                        "order": []
                    },
                    "groupby": [
                        "year"
                    ],
                    "frame": [
                        null,
                        0
                    ]
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Average_MPG\"])",
                    "as": "Average_MPG"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"]) && datum[\"Average_MPG\"] !== null && !isNaN(datum[\"Average_MPG\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "symbol",
            "style": [
                "circle"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "year_Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Miles_per_Gallon"
                    },
                    "shape": {
                        "value": "circle"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "line",
            "style": [
                "line"
            ],
            "sort": {
                "field": "datum[\"year_Year\"]",
                "order": "descending"
            },
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "red"
                    },
                    "x": {
                        "scale": "x",
                        "field": "year_Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Average_MPG"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "year_Year"
                    },
                    {
                        "data": "data_1",
                        "field": "year_Year"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Miles_per_Gallon"
                    },
                    {
                        "data": "data_1",
                        "field": "Average_MPG"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "Year (year)",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
