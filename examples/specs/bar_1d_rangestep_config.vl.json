{
  "$schema": "https://vega.github.io/schema/Vegemite/v2.json",
  "data": { "url": "data/population.json"},
  "transform": [{
    "filter": "datum.year == 2000"
  }],
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "sum", "field": "people", "type": "quantitative",
      "axis": {"title": "population"}}
  },
  "config": {"scale": {"rangeStep": 21}}
}
