{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "A bar chart showing the US population distribution of age groups in 2000.",
  "data": {"url": "data/population.json"},
  "transform": [{"filter": "datum.year == 2000"}],
  "layer": [
    {
      "mark": "rule",
      "encoding": {
        "y": {"field": "age", "type": "ordinal"},
        "x": {
          "aggregate": "min",
          "field": "people",
          "type": "quantitative",
          "axis": {"title": "population"}
        },
        "x2": {
          "aggregate": "max",
          "field": "people"
        }
      }
    },
    {
      "mark": "tick",
      "encoding": {
        "y": {"field": "age", "type": "ordinal"},
        "x": {
          "aggregate": "min",
          "field": "people",
          "type": "quantitative",
          "axis": {"title": "population"}
        },
        "size": {"value": 5}
      }
    },
    {
      "mark": "tick",
      "encoding": {
        "y": {"field": "age", "type": "ordinal"},
        "x": {
          "aggregate": "max",
          "field": "people",
          "type": "quantitative",
          "axis": {"title": "population"}
        },
        "size": {"value": 5}
      }
    },
    {
      "mark": "point",
      "encoding": {
        "y": {"field": "age", "type": "ordinal"},
        "x": {
          "aggregate": "mean",
          "field": "people",
          "type": "quantitative",
          "axis": {"title": "population"}
        },
        "size": {"value": 2}
      }
    }
  ]
}
