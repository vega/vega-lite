{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/cars.json"},
  "params": [
    {
      "name": "toggleOrigin",
      "bind": {"input": "checkbox"}
    },
    {
      "name": "paintbrush",
      "select": {"type": "point", "on": "mouseover"}
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {"field": "Horsepower", "type": "quantitative"},
    "y": {"field": "Miles_per_Gallon", "type": "quantitative"},
    "color": {
      "condition": {
        "param": "toggleOrigin",
        "field": "Origin",
        "type": "nominal"
      },
      "value": "steelblue"
    },
    "size": {
      "condition": {
        "param": "paintbrush",
        "empty": false,
        "value": 300
      },
      "value": 50
    }
  }
}
