{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/species.csv",
    "format": {"parse": {"county_id": "number"}}
  },
  "transform": [
    {
      "lookup": "county_id",
      "from": {
        "data": {
          "url": "data/us-10m.json",
          "format": {"type": "topojson", "feature": "counties"}
        },
        "key": "id"
      },
      "as": "geo"
    }
  ],
  "columns": 2,
  "facet": {
    "field": "common_name",
    "type": "nominal",
    "header": {"title": null, "labelFontSize": 14}
  },
  "spec": {
    "width": 300,
    "height": 200,
    "projection": {"type": "albers"},
    "mark": {"type": "geoshape"},
    "encoding": {
      "shape": {"field": "geo", "type": "geojson"},
      "color": {
        "field": "habitat_yearround_pct",
        "type": "quantitative",
        "scale": {"scheme": "viridis"},
        "legend": {"format": ".0%"},
        "title": ["Suitable Habitat", "% of County"]
      },
      "tooltip": [
        {"field": "county_id", "type": "nominal", "title": "County ID"},
        {
          "field": "habitat_yearround_pct",
          "type": "quantitative",
          "format": ".2%",
          "title": "Habitat %"
        }
      ]
    }
  }
}