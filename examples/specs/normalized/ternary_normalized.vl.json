          "as": "tooltip_low"
        },
        {"filter": "datum['City'] !== null"},
        {"calculate": "length(datum['City'])", "as": "leng"},
        {
          "calculate": "(datum.x*100 - length(datum['City']))/100",
          "as": "Xleng"
        },
        {
          "calculate": "(datum.x*100 + length(datum['City']))/100",
          "as": "Xleng2"
        },
