        },
        {"calculate": "0.866 * datum.medium_percent", "as": "y"},
        {
          "calculate": "toString(isValid(datum['High']) ? datum['High'] : 0) + ' (' + toString(round((isValid(datum.high_percent) ? datum.high_percent : 0) * 100, 1)) + '%)'",
