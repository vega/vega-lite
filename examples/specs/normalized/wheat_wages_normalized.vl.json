{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 400,
  "data": {"url": "data/wheat.json"},
  "layer": [
    {
      "mark": {"type": "bar", "fill": "#aaa", "stroke": "#999"},
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "wheat"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "year",
          "bin": "binned"
        },
        "x2": {"field": "year_end"}
      }
    },
    {
      "data": {
        "values": [
          {"year": "1600"},
          {"year": "1650"},
          {"year": "1700"},
          {"year": "1750"},
          {"year": "1800"}
        ]
      },
      "mark": {
        "type": "rule",
        "stroke": "#000",
        "strokeWidth": 0.6,
        "opacity": 0.5
      },
      "encoding": {
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "year"
        }
      }
    },
    {
      "mark": {"type": "area", "color": "#a4cedb", "opacity": 0.7},
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "wages"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "year"
        }
      }
    },
    {
      "mark": {"type": "line", "color": "#000", "opacity": 0.7},
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "wages"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "year"
        }
      }
    },
    {
      "mark": {"type": "line", "yOffset": -2, "color": "#EE8182"},
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "wages"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "year"
        }
      }
    },
    {
      "data": {"url": "data/monarchs.json"},
      "mark": {"type": "rect", "stroke": "#000"},
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "y"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "start"
        },
        "x2": {"field": "end"},
        "y2": {"field": "offset"},
        "fill": {
          "field": "commonwealth",
          "scale": {"range": ["black", "white"]},
          "legend": null
        }
      },
      "transform": [
        {
          "calculate": "((!datum.commonwealth && datum.index % 2) ? -1: 1) * 2 + 95",
          "as": "offset"
        },
        {"calculate": "95", "as": "y"}
      ]
    },
    {
      "data": {"url": "data/monarchs.json"},
      "mark": {
        "type": "text",
        "yOffset": 16,
        "fontSize": 9,
        "baseline": "bottom",
        "fontStyle": "italic"
      },
      "encoding": {
        "y": {"type": "quantitative", "axis": {"zindex": 1}, "field": "off2"},
        "x": {
          "type": "quantitative",
          "axis": {"tickCount": 5, "format": "d"},
          "field": "x"
        },
        "text": {"field": "name"}
      },
      "transform": [
        {
          "calculate": "((!datum.commonwealth && datum.index % 2) ? -1: 1) + 95",
          "as": "off2"
        },
        {"calculate": "+datum.start + (+datum.end - +datum.start)/2", "as": "x"}
      ]
    }
  ],
  "config": {
    "axis": {
      "title": null,
      "gridColor": "white",
      "gridOpacity": 0.25,
      "domain": false
    },
    "view": {"stroke": "transparent"}
  },
  "transform": [{"calculate": "+datum.year + 5", "as": "year_end"}]
}