{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Weight_in_lbs": "number",
                    "Year": "date"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Weight_in_lbs\"] !== null && !isNaN(datum[\"Weight_in_lbs\"]) && datum[\"Year\"] !== null && !isNaN(datum[\"Year\"])"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "year_Year"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "Weight_in_lbs"
                    ]
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "year_Year",
                        "order": "descending"
                    }
                }
            ]
        },
        {
            "name": "layout",
            "values": [
                {}
            ],
            "transform": [
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "200"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "200"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "description": "Area chart showing weight of cars over time (vertical).",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "area",
                    "from": {
                        "data": "summary"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "sum_Weight_in_lbs"
                            },
                            "y": {
                                "scale": "y",
                                "field": "year_Year"
                            },
                            "x2": {
                                "scale": "x",
                                "value": 0
                            },
                            "fill": {
                                "value": "#4c78a8"
                            },
                            "orient": {
                                "value": "horizontal"
                            }
                        }
                    }
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "linear",
                    "domain": {
                        "data": "summary",
                        "field": "sum_Weight_in_lbs"
                    },
                    "range": [
                        0,
                        200
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "y",
                    "type": "time",
                    "domain": {
                        "data": "summary",
                        "field": "year_Year"
                    },
                    "range": [
                        200,
                        0
                    ],
                    "round": true,
                    "nice": "year"
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "format": "s",
                    "orient": "bottom",
                    "tickCount": 5,
                    "title": "SUM(Weight_in_lbs)",
                    "zindex": 1
                },
                {
                    "scale": "x",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "bottom",
                    "tickCount": 5,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "y"
                },
                {
                    "scale": "y",
                    "orient": "left",
                    "title": "YEAR(Year)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%Y')"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "y",
                    "domain": false,
                    "grid": true,
                    "labels": false,
                    "orient": "left",
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "x"
                }
            ]
        }
    ]
}