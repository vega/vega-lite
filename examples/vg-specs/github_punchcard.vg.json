{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/github.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "time": "date",
                    "count": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"time\"] !== null && !isNaN(datum[\"time\"]) && datum[\"count\"] !== null && !isNaN(datum[\"count\"])"
                },
                {
                    "type": "formula",
                    "as": "day_time",
                    "expr": "datetime(2006, 0, day(datum[\"time\"])+1, 0, 0, 0, 0)"
                },
                {
                    "type": "formula",
                    "as": "hours_time",
                    "expr": "datetime(0, 0, 1, hours(datum[\"time\"]), 0, 0, 0)"
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "day_time",
                        "hours_time"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "count"
                    ]
                }
            ]
        },
        {
            "name": "layout",
            "source": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "fields": [
                        "hours_time",
                        "day_time"
                    ],
                    "ops": [
                        "distinct",
                        "distinct"
                    ]
                },
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "max(datum[\"distinct_hours_time\"] - 1 + 2*0.5, 0) * 21"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "max(datum[\"distinct_day_time\"] - 1 + 2*0.5, 0) * 21"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "symbol",
                    "role": "circle",
                    "from": {
                        "data": "summary"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "hours_time"
                            },
                            "y": {
                                "scale": "y",
                                "field": "day_time"
                            },
                            "fill": {
                                "value": "#4c78a8"
                            },
                            "size": {
                                "scale": "size",
                                "field": "sum_count"
                            },
                            "shape": {
                                "value": "circle"
                            }
                        }
                    }
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "point",
                    "domain": {
                        "data": "summary",
                        "field": "hours_time",
                        "sort": true
                    },
                    "range": {
                        "step": 21
                    },
                    "round": true,
                    "padding": 0.5
                },
                {
                    "name": "y",
                    "type": "point",
                    "domain": {
                        "data": "summary",
                        "field": "day_time",
                        "sort": true
                    },
                    "range": {
                        "step": 21
                    },
                    "round": true,
                    "padding": 0.5
                },
                {
                    "name": "size",
                    "type": "linear",
                    "domain": {
                        "data": "summary",
                        "field": "sum_count"
                    },
                    "range": [
                        0,
                        361
                    ],
                    "nice": false,
                    "zero": true
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "orient": "bottom",
                    "tickCount": 5,
                    "title": "HOURS(time)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%H')"
                                },
                                "angle": {
                                    "value": 270
                                },
                                "align": {
                                    "value": "right"
                                },
                                "baseline": {
                                    "value": "middle"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "y",
                    "orient": "left",
                    "title": "DAY(time)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "text": {
                                    "signal": "timeFormat(datum.value, '%A')"
                                }
                            }
                        }
                    }
                }
            ],
            "legends": [
                {
                    "size": "size",
                    "format": "s",
                    "title": "SUM(count)",
                    "encode": {
                        "symbols": {
                            "update": {
                                "shape": {
                                    "value": "circle"
                                },
                                "strokeWidth": {
                                    "value": 0
                                },
                                "fill": {
                                    "value": "#4c78a8"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}