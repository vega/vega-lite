{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Google's stock price over time.",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "stroke": {
                "value": "#ccc"
            },
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "values": [
                {
                    "date": "10 Oct 2011 22:48:00"
                },
                {
                    "date": "11 Oct 2022 23:00:00"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "as": "hours_date",
                    "expr": "datetime(0, 0, 1, hours(datum[\"date\"]), 0, 0, 0)"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "21"
        },
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 1, 0.5) * y_step"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "clip": true,
            "role": "point",
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "value": 10.5
                    },
                    "y": {
                        "scale": "y",
                        "field": "hours_date"
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    },
                    "fill": {
                        "value": "transparent"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "y",
            "type": "point",
            "domain": {
                "data": "data_0",
                "field": "hours_date",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "round": true,
            "padding": 0.5
        }
    ],
    "axes": [
        {
            "title": "time",
            "scale": "y",
            "orient": "left",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%H')"
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axis": {
            "quantitativeExtent": 30
        }
    }
}
