{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Displacement": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Displacement\"] !== null && !isNaN(datum[\"Displacement\"])"
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Origin"
                    ],
                    "ops": [
                        "mean",
                        "mean"
                    ],
                    "fields": [
                        "Horsepower",
                        "Displacement"
                    ]
                }
            ]
        },
        {
            "name": "layout",
            "values": [
                {}
            ],
            "transform": [
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "200"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "200"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "description": "A scatterplot showing average horsepower and displacement for cars from different origins.",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "symbol",
                    "role": "point",
                    "from": {
                        "data": "summary"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "mean_Horsepower"
                            },
                            "y": {
                                "scale": "y",
                                "field": "mean_Displacement"
                            },
                            "stroke": {
                                "value": "#4c78a8"
                            },
                            "fill": {
                                "value": "transparent"
                            }
                        }
                    }
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "linear",
                    "domain": {
                        "data": "summary",
                        "field": "mean_Horsepower"
                    },
                    "range": [
                        0,
                        200
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "y",
                    "type": "linear",
                    "domain": {
                        "data": "summary",
                        "field": "mean_Displacement"
                    },
                    "range": [
                        200,
                        0
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "format": "s",
                    "orient": "bottom",
                    "tickCount": 5,
                    "title": "MEAN(Horsepower)",
                    "zindex": 1
                },
                {
                    "scale": "x",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "bottom",
                    "tickCount": 5,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "y"
                },
                {
                    "scale": "y",
                    "format": "s",
                    "orient": "left",
                    "title": "MEAN(Displacement)",
                    "zindex": 1
                },
                {
                    "scale": "y",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "left",
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "x"
                }
            ]
        }
    ]
}