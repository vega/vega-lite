{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_0",
            "url": "data/driving.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"miles\"])",
                    "as": "miles"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"gas\"])",
                    "as": "gas"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"year\"])",
                    "as": "year"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"miles\"] !== null && !isNaN(datum[\"miles\"]) && datum[\"gas\"] !== null && !isNaN(datum[\"gas\"]) && datum[\"year\"] !== null && !isNaN(datum[\"year\"])"
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": [
                            "year"
                        ],
                        "order": [
                            "ascending"
                        ]
                    }
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"miles\"])",
                    "as": "miles"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"gas\"])",
                    "as": "gas"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"year\"])",
                    "as": "year"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"miles\"] !== null && !isNaN(datum[\"miles\"]) && datum[\"gas\"] !== null && !isNaN(datum[\"gas\"]) && datum[\"year\"] !== null && !isNaN(datum[\"year\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "max(layer_0_width, layer_1_width)"
        },
        {
            "name": "height",
            "update": "max(layer_0_height, layer_1_height)"
        },
        {
            "name": "layer_0_width",
            "update": "200"
        },
        {
            "name": "layer_0_height",
            "update": "200"
        },
        {
            "name": "layer_1_width",
            "update": "200"
        },
        {
            "name": "layer_1_height",
            "update": "200"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "nested_main_group",
            "type": "group",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "layer_0_marks",
                    "type": "line",
                    "from": {
                        "data": "data_0"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "miles"
                            },
                            "y": {
                                "scale": "y",
                                "field": "gas"
                            },
                            "stroke": {
                                "value": "#4c78a8"
                            }
                        }
                    },
                    "clip": true
                },
                {
                    "name": "layer_1_marks",
                    "type": "symbol",
                    "role": "pointOverlay",
                    "from": {
                        "data": "data_1"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "miles"
                            },
                            "y": {
                                "scale": "y",
                                "field": "gas"
                            },
                            "fill": {
                                "value": "#4c78a8"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "clip": true
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "miles"
                    },
                    {
                        "data": "data_1",
                        "field": "miles"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                200
            ],
            "round": true,
            "nice": true,
            "zero": false
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "gas"
                    },
                    {
                        "data": "data_1",
                        "field": "gas"
                    }
                ],
                "sort": true
            },
            "range": [
                200,
                0
            ],
            "round": true,
            "nice": true,
            "zero": false
        }
    ],
    "axes": [
        {
            "scale": "x",
            "format": "s",
            "orient": "bottom",
            "tickCount": 5,
            "title": "miles",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "format": "s",
            "grid": true,
            "labels": false,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "format": "s",
            "orient": "left",
            "title": "gas",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "format": "s",
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ]
}