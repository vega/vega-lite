{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "stroke": {
                "value": "#ccc"
            },
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Miles_per_Gallon": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "role": "circle",
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Horsepower"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Miles_per_Gallon"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "shape": {
                        "value": "circle"
                    },
                    "opacity": {
                        "scale": "opacity",
                        "field": "Miles_per_Gallon"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "round": true,
            "nice": true,
            "zero": true,
            "domain": {
                "data": "source_0",
                "field": "Horsepower"
            }
        },
        {
            "name": "y",
            "type": "linear",
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "round": true,
            "nice": true,
            "zero": true,
            "domain": {
                "data": "source_0",
                "field": "Miles_per_Gallon"
            }
        },
        {
            "name": "opacity",
            "type": "linear",
            "range": [
                0.3,
                0.8
            ],
            "nice": false,
            "zero": false,
            "domain": {
                "data": "source_0",
                "field": "Miles_per_Gallon"
            }
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": 5,
            "title": "Horsepower",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Miles_per_Gallon",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "legends": [
        {
            "opacity": "opacity",
            "title": "Miles_per_Gallon",
            "encode": {
                "symbols": {
                    "update": {
                        "shape": {
                            "value": "circle"
                        },
                        "fill": {
                            "value": "#4c78a8"
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axis": {
            "minExtent": 30
        }
    }
}
