{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "stroke": {
                "value": "#ccc"
            },
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "pts_store"
        },
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Miles_per_Gallon": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        },
        {
            "name": "pts",
            "update": "data(\"pts_store\").length && {Cylinders: data(\"pts_store\")[0].values[0], Origin: data(\"pts_store\")[0].values[1]}"
        },
        {
            "name": "pts_tuple",
            "value": {},
            "on": [
                {
                    "events": [
                        {
                            "source": "scope",
                            "type": "click"
                        }
                    ],
                    "update": "datum && item().mark.marktype !== 'group' ? {unit: \"\", encodings: [], fields: [\"Cylinders\", \"Origin\"], values: [datum[\"Cylinders\"], datum[\"Origin\"]]} : null"
                }
            ]
        },
        {
            "name": "pts_modify",
            "on": [
                {
                    "events": {
                        "signal": "pts_tuple"
                    },
                    "update": "modify(\"pts_store\", pts_tuple, true)"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "role": "point",
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Horsepower"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Miles_per_Gallon"
                    },
                    "stroke": [
                        {
                            "test": "vlPoint(\"pts_store\", datum)",
                            "scale": "color",
                            "field": "Cylinders"
                        },
                        {
                            "value": "grey"
                        }
                    ],
                    "fill": {
                        "value": "transparent"
                    },
                    "size": [
                        {
                            "test": "vlPoint(\"pts_store\", datum)",
                            "value": 200
                        },
                        {
                            "value": 50
                        }
                    ],
                    "shape": [
                        {
                            "test": "vlPoint(\"pts_store\", datum)",
                            "scale": "shape",
                            "field": "Origin"
                        },
                        {
                            "value": "circle"
                        }
                    ],
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Horsepower"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Miles_per_Gallon"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "shape",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "Origin",
                "sort": true
            },
            "range": [
                "triangle-left",
                "triangle-right",
                "triangle-up"
            ]
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "Cylinders",
                "sort": true
            },
            "range": {
                "scheme": "yelloworangebrown"
            }
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": 5,
            "title": "Horsepower",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Miles_per_Gallon",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "legends": [
        {
            "stroke": "color",
            "title": "Cylinders",
            "encode": {
                "symbols": {
                    "update": {
                        "shape": {
                            "value": "circle"
                        }
                    }
                }
            }
        },
        {
            "shape": "shape",
            "title": "Origin",
            "encode": {
                "symbols": {
                    "update": {
                        "stroke": [
                            {
                                "test": "vlPoint(\"pts_store\", datum)",
                                "scale": "color",
                                "field": "Cylinders"
                            },
                            {
                                "value": "grey"
                            }
                        ],
                        "fill": {
                            "value": "transparent"
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axis": {
            "minExtent": 30
        }
    }
}
