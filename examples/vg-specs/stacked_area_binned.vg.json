{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Acceleration": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Acceleration\"] !== null && !isNaN(datum[\"Acceleration\"])"
                },
                {
                    "type": "extent",
                    "field": "Acceleration",
                    "signal": "Acceleration_extent"
                },
                {
                    "type": "bin",
                    "field": "Acceleration",
                    "as": [
                        "bin_Acceleration_start",
                        "bin_Acceleration_end"
                    ],
                    "signal": "Acceleration_bins",
                    "extent": {
                        "signal": "Acceleration_extent"
                    },
                    "maxbins": 10
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders",
                        "bin_Acceleration_start",
                        "bin_Acceleration_end",
                        "bin_Acceleration_range"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "Horsepower"
                    ]
                }
            ]
        },
        {
            "name": "stacked",
            "source": "summary",
            "transform": [
                {
                    "type": "impute",
                    "field": "sum_Horsepower",
                    "groupby": [
                        "Cylinders"
                    ],
                    "orderby": [
                        "bin_Acceleration_start",
                        "bin_Acceleration_end"
                    ],
                    "method": "value",
                    "value": 0
                },
                {
                    "type": "stack",
                    "groupby": [
                        "bin_Acceleration_start",
                        "bin_Acceleration_end"
                    ],
                    "field": "sum_Horsepower",
                    "sort": {
                        "field": [
                            "Cylinders"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_Horsepower_start",
                        "sum_Horsepower_end"
                    ],
                    "offset": "zero"
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "bin_Acceleration_start",
                        "order": "descending"
                    }
                }
            ]
        },
        {
            "name": "layout",
            "values": [
                {}
            ],
            "transform": [
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "200"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "200"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "pathgroup",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted-path-stacked",
                            "data": "stacked",
                            "groupby": [
                                "Cylinders"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "height": {
                                "field": {
                                    "group": "height"
                                }
                            }
                        }
                    },
                    "marks": [
                        {
                            "name": "marks",
                            "type": "area",
                            "from": {
                                "data": "faceted-path-stacked"
                            },
                            "encode": {
                                "update": {
                                    "x": {
                                        "signal": "(scale(\"x\", datum[\"bin_Acceleration_start\"]) + scale(\"x\", datum[\"bin_Acceleration_end\"]))/2"
                                    },
                                    "y": {
                                        "scale": "y",
                                        "field": "sum_Horsepower_end"
                                    },
                                    "y2": {
                                        "scale": "y",
                                        "field": "sum_Horsepower_start"
                                    },
                                    "fill": {
                                        "scale": "color",
                                        "field": "Cylinders"
                                    },
                                    "orient": {
                                        "value": "vertical"
                                    }
                                }
                            }
                        }
                    ]
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "bin-linear",
                    "domain": {
                        "signal": "sequence(Acceleration_bins.start, Acceleration_bins.stop + Acceleration_bins.step, Acceleration_bins.step)"
                    },
                    "range": [
                        0,
                        200
                    ],
                    "round": true,
                    "nice": true
                },
                {
                    "name": "y",
                    "type": "linear",
                    "domain": {
                        "data": "stacked",
                        "fields": [
                            "sum_Horsepower_start",
                            "sum_Horsepower_end"
                        ]
                    },
                    "range": [
                        200,
                        0
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "color",
                    "type": "ordinal",
                    "domain": {
                        "data": "summary",
                        "field": "Cylinders",
                        "sort": true
                    },
                    "range": "category"
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "format": "s",
                    "orient": "bottom",
                    "title": "BIN(Acceleration)",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "angle": {
                                    "value": 270
                                },
                                "align": {
                                    "value": "right"
                                },
                                "baseline": {
                                    "value": "middle"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "y",
                    "format": "s",
                    "orient": "left",
                    "title": "SUM(Horsepower)",
                    "zindex": 1
                },
                {
                    "scale": "y",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "left",
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "x"
                }
            ],
            "legends": [
                {
                    "fill": "color",
                    "title": "Cylinders",
                    "encode": {
                        "symbols": {
                            "update": {
                                "strokeWidth": {
                                    "value": 0
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}