{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/population.json",
            "format": {
                "type": "json",
                "parse": {
                    "people": "number"
                }
            },
            "transform": [
                {
                    "type": "formula",
                    "as": "gender",
                    "expr": "datum.sex == 2 ? \"Female\" : \"Male\""
                },
                {
                    "type": "filter",
                    "expr": "datum[\"people\"] !== null && !isNaN(datum[\"people\"])"
                },
                {
                    "type": "filter",
                    "expr": "datum.year == 2000"
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "age",
                        "people"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "people"
                    ]
                }
            ]
        },
        {
            "name": "stacked",
            "source": "summary",
            "transform": [
                {
                    "type": "stack",
                    "groupby": [
                        "age"
                    ],
                    "field": "sum_people",
                    "sort": {
                        "field": [
                            "people"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_people_start",
                        "sum_people_end"
                    ],
                    "offset": "zero"
                }
            ]
        },
        {
            "name": "layout",
            "source": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "fields": [
                        "age"
                    ],
                    "ops": [
                        "distinct"
                    ]
                },
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "max(datum[\"distinct_age\"] - 1 + 2*0.5, 0) * 17"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "200"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "description": "A bar chart showing the US population distribution of age groups and gender in 2000.",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "rect",
                    "role": "bar",
                    "from": {
                        "data": "stacked"
                    },
                    "encode": {
                        "update": {
                            "xc": {
                                "scale": "x",
                                "field": "age"
                            },
                            "width": {
                                "value": 16
                            },
                            "y": {
                                "scale": "y",
                                "field": "sum_people_end"
                            },
                            "y2": {
                                "scale": "y",
                                "field": "sum_people_start"
                            },
                            "fill": {
                                "value": "#4c78a8"
                            },
                            "opacity": {
                                "scale": "opacity",
                                "field": "people"
                            }
                        }
                    }
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "point",
                    "domain": {
                        "data": "summary",
                        "field": "age",
                        "sort": true
                    },
                    "range": {
                        "step": 17
                    },
                    "round": true,
                    "padding": 0.5
                },
                {
                    "name": "y",
                    "type": "linear",
                    "domain": {
                        "data": "stacked",
                        "fields": [
                            "sum_people_start",
                            "sum_people_end"
                        ]
                    },
                    "range": [
                        200,
                        0
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "opacity",
                    "type": "linear",
                    "domain": {
                        "data": "summary",
                        "field": "people"
                    },
                    "range": [
                        0.3,
                        0.8
                    ],
                    "nice": false,
                    "zero": false
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "orient": "bottom",
                    "tickCount": 5,
                    "title": "age",
                    "zindex": 1,
                    "encode": {
                        "labels": {
                            "update": {
                                "angle": {
                                    "value": 270
                                },
                                "align": {
                                    "value": "right"
                                },
                                "baseline": {
                                    "value": "middle"
                                }
                            }
                        }
                    }
                },
                {
                    "scale": "y",
                    "format": "s",
                    "orient": "left",
                    "title": "population",
                    "zindex": 1
                },
                {
                    "scale": "y",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "left",
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "x"
                }
            ],
            "legends": [
                {
                    "opacity": "opacity",
                    "format": "s",
                    "title": "people",
                    "encode": {
                        "symbols": {
                            "update": {
                                "shape": {
                                    "value": "square"
                                },
                                "strokeWidth": {
                                    "value": 0
                                },
                                "fill": {
                                    "value": "#4c78a8"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}