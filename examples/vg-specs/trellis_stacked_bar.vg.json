{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/barley.json",
            "format": {
                "type": "json",
                "parse": {
                    "yield": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"yield\"] !== null && !isNaN(datum[\"yield\"])"
                }
            ]
        },
        {
            "source": "source",
            "name": "summary",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "variety",
                        "site",
                        "year"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "yield"
                    ]
                }
            ]
        },
        {
            "name": "stacked",
            "source": "summary",
            "transform": [
                {
                    "type": "stack",
                    "groupby": [
                        "variety",
                        "year"
                    ],
                    "field": "sum_yield",
                    "sort": {
                        "field": [
                            "site"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_yield_start",
                        "sum_yield_end"
                    ],
                    "offset": "zero"
                }
            ]
        },
        {
            "name": "column-stacked",
            "source": "stacked",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "year"
                    ]
                }
            ]
        },
        {
            "name": "layout",
            "source": "stacked",
            "transform": [
                {
                    "type": "aggregate",
                    "fields": [
                        "year",
                        "variety"
                    ],
                    "ops": [
                        "distinct",
                        "distinct"
                    ]
                },
                {
                    "type": "formula",
                    "as": "child_width",
                    "expr": "200"
                },
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "(datum[\"child_width\"] + 16) * datum[\"distinct_year\"]"
                },
                {
                    "type": "formula",
                    "as": "child_height",
                    "expr": "max(datum[\"distinct_variety\"] - 1 + 2*0.5, 0) * 21"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "datum[\"child_height\"] + 16"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "x-axes",
                    "type": "group",
                    "from": {
                        "data": "column-stacked"
                    },
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "parent": "child_width"
                                }
                            },
                            "height": {
                                "field": {
                                    "group": "height"
                                }
                            },
                            "x": {
                                "scale": "column",
                                "field": "year",
                                "offset": 8
                            }
                        }
                    },
                    "axes": [
                        {
                            "scale": "x",
                            "format": "s",
                            "orient": "bottom",
                            "tickCount": 5,
                            "title": "SUM(yield)",
                            "zindex": 1
                        }
                    ]
                },
                {
                    "name": "y-axes",
                    "type": "group",
                    "encode": {
                        "update": {
                            "width": {
                                "field": {
                                    "group": "width"
                                }
                            },
                            "height": {
                                "field": {
                                    "parent": "child_height"
                                }
                            },
                            "y": {
                                "value": 8
                            }
                        }
                    },
                    "axes": [
                        {
                            "scale": "y",
                            "orient": "left",
                            "title": "variety",
                            "zindex": 1
                        }
                    ]
                },
                {
                    "name": "cell",
                    "type": "group",
                    "from": {
                        "facet": {
                            "name": "faceted-data",
                            "data": "stacked",
                            "groupby": [
                                "year"
                            ]
                        }
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "column",
                                "field": "year",
                                "offset": 8
                            },
                            "y": {
                                "value": 8
                            },
                            "width": {
                                "field": {
                                    "parent": "child_width"
                                }
                            },
                            "height": {
                                "field": {
                                    "parent": "child_height"
                                }
                            },
                            "stroke": {
                                "value": "#ccc"
                            },
                            "strokeWidth": {
                                "value": 1
                            },
                            "fill": {
                                "value": "transparent"
                            }
                        }
                    },
                    "marks": [
                        {
                            "name": "child_marks",
                            "type": "rect",
                            "role": "bar",
                            "from": {
                                "data": "faceted-data"
                            },
                            "encode": {
                                "update": {
                                    "x": {
                                        "scale": "x",
                                        "field": "sum_yield_end"
                                    },
                                    "x2": {
                                        "scale": "x",
                                        "field": "sum_yield_start"
                                    },
                                    "yc": {
                                        "scale": "y",
                                        "field": "variety"
                                    },
                                    "height": {
                                        "value": 20
                                    },
                                    "fill": {
                                        "scale": "color",
                                        "field": "site"
                                    }
                                }
                            }
                        }
                    ],
                    "axes": [
                        {
                            "scale": "x",
                            "domain": false,
                            "format": "s",
                            "grid": true,
                            "labels": false,
                            "orient": "bottom",
                            "tickCount": 5,
                            "ticks": false,
                            "zindex": 0,
                            "gridScale": "y"
                        }
                    ]
                }
            ],
            "scales": [
                {
                    "name": "column",
                    "type": "band",
                    "domain": {
                        "data": "stacked",
                        "field": "year",
                        "sort": true
                    },
                    "range": "width",
                    "round": true
                },
                {
                    "name": "x",
                    "type": "linear",
                    "domain": {
                        "data": "stacked",
                        "fields": [
                            "sum_yield_start",
                            "sum_yield_end"
                        ]
                    },
                    "range": [
                        0,
                        200
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "y",
                    "type": "point",
                    "domain": {
                        "data": "summary",
                        "field": "variety",
                        "sort": true
                    },
                    "range": {
                        "step": 21
                    },
                    "round": true,
                    "padding": 0.5
                },
                {
                    "name": "color",
                    "type": "ordinal",
                    "domain": {
                        "data": "summary",
                        "field": "site",
                        "sort": true
                    },
                    "range": "category"
                }
            ],
            "axes": [
                {
                    "scale": "column",
                    "domain": false,
                    "grid": false,
                    "orient": "top",
                    "ticks": false,
                    "title": "year",
                    "zindex": 1
                }
            ],
            "legends": [
                {
                    "fill": "color",
                    "title": "site",
                    "encode": {
                        "symbols": {
                            "update": {
                                "shape": {
                                    "value": "square"
                                },
                                "strokeWidth": {
                                    "value": 0
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}