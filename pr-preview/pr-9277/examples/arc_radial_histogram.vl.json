{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/movies.json"},
  "layer": [
    {
      "mark": {"type": "arc", "stroke": "white", "tooltip": true}
    },
    {
      "mark": {"type": "text", "radiusOffset": 15, "align": "right"},
      "encoding": {
        "text": {
          "bin": true,
          "field": "IMDB Rating"
        },
        "angle": {
          "bin": true,
          "field": "IMDB Rating",
          "scale": {"range": [90, 450]}
        }
      }
    }
  ],
  "encoding": {
    "theta": {
      "bin": true,
      "field": "IMDB Rating"
    },
    "radius": {
      "aggregate": "count",
      "scale": {"type": "sqrt"}
    }
  }
}
