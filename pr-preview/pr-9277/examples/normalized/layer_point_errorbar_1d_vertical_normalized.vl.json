{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/barley.json"},
  "layer": [
    {
      "transform": [
        {
          "aggregate": [
            {"op": "stderr", "field": "yield", "as": "extent_yield"},
            {"op": "mean", "field": "yield", "as": "center_yield"}
          ],
          "groupby": []
        },
        {
          "calculate": "datum[\"center_yield\"] + datum[\"extent_yield\"]",
          "as": "upper_yield"
        },
        {
          "calculate": "datum[\"center_yield\"] - datum[\"extent_yield\"]",
          "as": "lower_yield"
        }
      ],
      "mark": {
        "type": "rule",
        "ariaRoleDescription": "errorbar",
        "style": "errorbar-rule"
      },
      "encoding": {
        "y": {
          "field": "lower_yield",
          "type": "quantitative",
          "title": "yield",
          "scale": {"zero": false}
        },
        "y2": {"field": "upper_yield"},
        "tooltip": [
          {
            "field": "center_yield",
            "type": "quantitative",
            "title": "Mean of yield"
          },
          {
            "field": "upper_yield",
            "type": "quantitative",
            "title": "Mean + stderr of yield"
          },
          {
            "field": "lower_yield",
            "type": "quantitative",
            "title": "Mean - stderr of yield"
          }
        ]
      }
    },
    {
      "mark": {"type": "point", "filled": true, "color": "black"},
      "encoding": {
        "y": {"field": "yield", "aggregate": "mean", "type": "quantitative"}
      }
    }
  ]
}